---
// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';

// Data imports
import { socialLinks } from '../data/socialLinks';
---

<BaseLayout>
	<main class="wrapper">
		<img
			alt="A picture of Guillaume Jacquart"
			width="150"
			height="150"
			src="/assets/me.jpg"
		/>
		<Hero
			title="Hello, I'm Guillaume Jacquart"
			tagline="The best way to predict the future is to create it."
			align="center"
		>
		</Hero>
		<div class="socials">
			{socialLinks.map((link) => (
				<a href={link.url} target="_blank" rel="noopener">
					<Icon icon={link.icon} size="2em" />
					<span>{link.description}</span>
				</a>
			))}
		</div>
	</main>
</BaseLayout>

<style>
	.wrapper {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 1.5rem;
		flex-grow: 1;
		padding: 1rem 2rem 2rem;
		margin-top: -12vh; /* Shift content slightly above center */
	}

	img {
		width: 150px;
		height: 150px;
		object-fit: cover;
		border-radius: 50%;
		box-shadow: var(--shadow-md);
		margin-top: 1rem;
	}

	.socials {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.socials a {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.socials a {
		color: var(--gray-400);
		transition: color 0.3s ease;
		text-decoration: none;
	}

	.socials a:hover {
		color: var(--gray-0);
	}
</style>
